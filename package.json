{
  "name": "computor-vsc-extension",
  "displayName": "Computor VS Code Extension",
  "description": "VS Code extension for computor teaching software",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:computor.activate",
    "onCommand:computor.showUIComponents",
    "onCommand:computor.showSettings",
    "onCommand:computor.signIn",
    "onCommand:computor.signOut",
    "onCommand:computor.showGitStatus",
    "onCommand:computor.selectWorkspaceDirectory",
    "onAuthenticationRequest:computor",
    "onView:computor.apiTreeView",
    "onView:computor.jsonTreeView",
    "onView:computor.testResultsView",
    "onView:computor.lecturerView",
    "onView:computor.examplesView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "computor",
          "title": "Computor",
          "icon": "$(mortar-board)"
        }
      ]
    },
    "commands": [
      {
        "command": "computor.activate",
        "title": "Activate Computor"
      },
      {
        "command": "computor.showUIComponents",
        "title": "Computor: Show UI Components"
      },
      {
        "command": "computor.showSettings",
        "title": "Computor: Settings"
      },
      {
        "command": "computor.signIn",
        "title": "Computor: Sign In",
        "category": "Accounts"
      },
      {
        "command": "computor.signOut",
        "title": "Computor: Sign Out",
        "category": "Accounts"
      },
      {
        "command": "computor.showGitStatus",
        "title": "Computor: Show Git Status",
        "category": "Git"
      },
      {
        "command": "computor.refreshApiTree",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.loadMoreApiItems",
        "title": "Load More",
        "category": "Computor Tree"
      },
      {
        "command": "computor.copyApiItemData",
        "title": "Copy Data",
        "category": "Computor Tree"
      },
      {
        "command": "computor.openApiDataInEditor",
        "title": "Open in Editor",
        "category": "Computor Tree"
      },
      {
        "command": "computor.copyJsonValue",
        "title": "Copy Value",
        "category": "Computor Tree"
      },
      {
        "command": "computor.copyJsonPath",
        "title": "Copy Path",
        "category": "Computor Tree"
      },
      {
        "command": "computor.openJsonInEditor",
        "title": "Open JSON in Editor",
        "icon": "$(go-to-file)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.searchJson",
        "title": "Search",
        "icon": "$(search)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.clearJsonSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.expandAllJson",
        "title": "Expand All",
        "icon": "$(expand-all)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.collapseAllJson",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.jsonStatistics",
        "title": "Show Statistics",
        "icon": "$(graph)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.goToTest",
        "title": "Go to Test",
        "category": "Computor Tree"
      },
      {
        "command": "computor.runSingleTest",
        "title": "Run Test",
        "icon": "$(run)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.groupTestsBy",
        "title": "Group By...",
        "icon": "$(group-by-ref-type)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.toggleShowOnlyFailures",
        "title": "Toggle Show Only Failures",
        "icon": "$(filter)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.showTestSummary",
        "title": "Show Summary",
        "icon": "$(info)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.exportTestResults",
        "title": "Export Results",
        "icon": "$(export)",
        "category": "Computor Tree"
      },
      {
        "command": "computor.selectWorkspaceDirectory",
        "title": "Select Workspace Directory",
        "category": "Computor"
      },
      {
        "command": "computor.checkoutExample",
        "title": "Checkout Example",
        "icon": "$(cloud-download)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.searchExamples",
        "title": "Search Examples",
        "icon": "$(search)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.clearExampleSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.filterExamplesByCategory",
        "title": "Filter by Category",
        "icon": "$(filter)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.filterExamplesByTags",
        "title": "Filter by Tags",
        "icon": "$(tag)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.refreshExamples",
        "title": "Refresh Examples",
        "icon": "$(refresh)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.checkoutMultipleExamples",
        "title": "Checkout Multiple Examples",
        "icon": "$(cloud-download)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.uploadExample",
        "title": "Upload Example",
        "icon": "$(cloud-upload)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.scanWorkspace",
        "title": "Scan Workspace for Examples",
        "icon": "$(search)",
        "category": "Computor Examples"
      },
      {
        "command": "computor.refreshLecturerTree",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.createCourseContent",
        "title": "Create Course Content",
        "icon": "$(add)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.createCourseContentType",
        "title": "Create Content Type",
        "icon": "$(add)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.createCourseGroup",
        "title": "Create Course Group",
        "icon": "$(add)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.showCourseDetails",
        "title": "Show Details",
        "icon": "$(info)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.showCourseContentDetails",
        "title": "Show Details",
        "icon": "$(info)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.showOrganizationDetails",
        "title": "Show Details",
        "icon": "$(info)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.showCourseFamilyDetails",
        "title": "Show Details",
        "icon": "$(info)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.showCourseContentTypeDetails",
        "title": "Show Details",
        "icon": "$(info)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.renameCourseContent",
        "title": "Rename",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.deleteCourseContent",
        "title": "Delete",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.assignExample",
        "title": "Assign Example",
        "icon": "$(link)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.unassignExample",
        "title": "Unassign Example",
        "icon": "$(unlink)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.openGitLabRepo",
        "title": "Open GitLab Repository",
        "icon": "$(github)",
        "category": "Computor Lecturer"
      },
      {
        "command": "computor.manageGitLabTokens",
        "title": "Manage GitLab Tokens",
        "category": "Computor"
      },
      {
        "command": "computor.releaseCourseContent",
        "title": "Release Course Content",
        "icon": "$(rocket)",
        "category": "Computor Lecturer"
      }
    ],
    "viewsWelcome": [
      {
        "view": "computor.welcome",
        "contents": "Welcome to Computor!\n\n[Sign In](command:computor.signIn)\n\nSign in to access lecturer features and manage your courses."
      }
    ],
    "views": {
      "computor": [
        {
          "id": "computor.lecturerView",
          "name": "Lecturer View",
          "icon": "$(mortar-board)",
          "contextualTitle": "Computor Lecturer View",
          "when": "computor.authenticated"
        },
        {
          "id": "computor.examplesView",
          "name": "Example Workbench",
          "icon": "$(repo)",
          "contextualTitle": "Example Repository Workbench",
          "when": "computor.authenticated"
        },
        {
          "id": "computor.welcome",
          "name": "Welcome",
          "when": "!computor.authenticated"
        }
      ],
      "explorer": [
        {
          "id": "computor.apiTreeView",
          "name": "Computor API",
          "icon": "$(globe)",
          "contextualTitle": "Computor API Data",
          "when": "computor.authenticated"
        },
        {
          "id": "computor.jsonTreeView",
          "name": "JSON Explorer",
          "icon": "$(json)",
          "contextualTitle": "JSON Data Explorer"
        },
        {
          "id": "computor.testResultsView",
          "name": "Test Results",
          "icon": "$(beaker)",
          "contextualTitle": "Test Results Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "computor.refreshApiTree",
          "when": "view == computor.apiTreeView",
          "group": "navigation@1"
        },
        {
          "command": "computor.openJsonInEditor",
          "when": "view == computor.jsonTreeView",
          "group": "navigation@1"
        },
        {
          "command": "computor.searchJson",
          "when": "view == computor.jsonTreeView",
          "group": "navigation@2"
        },
        {
          "command": "computor.expandAllJson",
          "when": "view == computor.jsonTreeView",
          "group": "navigation@3"
        },
        {
          "command": "computor.collapseAllJson",
          "when": "view == computor.jsonTreeView",
          "group": "navigation@4"
        },
        {
          "command": "computor.groupTestsBy",
          "when": "view == computor.testResultsView",
          "group": "navigation@1"
        },
        {
          "command": "computor.toggleShowOnlyFailures",
          "when": "view == computor.testResultsView",
          "group": "navigation@2"
        },
        {
          "command": "computor.showTestSummary",
          "when": "view == computor.testResultsView",
          "group": "navigation@3"
        },
        {
          "command": "computor.exportTestResults",
          "when": "view == computor.testResultsView",
          "group": "navigation@4"
        },
        {
          "command": "computor.refreshLecturerTree",
          "when": "view == computor.lecturerView",
          "group": "navigation@1"
        },
        {
          "command": "computor.selectWorkspaceDirectory",
          "when": "view == computor.lecturerView",
          "group": "navigation@2"
        },
        {
          "command": "computor.releaseCourseContent",
          "when": "view == computor.lecturerView",
          "group": "navigation@3"
        },
        {
          "command": "computor.refreshExamples",
          "when": "view == computor.examplesView",
          "group": "navigation@1"
        },
        {
          "command": "computor.searchExamples",
          "when": "view == computor.examplesView",
          "group": "navigation@2"
        },
        {
          "command": "computor.filterExamplesByCategory",
          "when": "view == computor.examplesView",
          "group": "navigation@3"
        },
        {
          "command": "computor.filterExamplesByTags",
          "when": "view == computor.examplesView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "computor.copyApiItemData",
          "when": "view == computor.apiTreeView && viewItem =~ /apiTreeItem/",
          "group": "1_copy@1"
        },
        {
          "command": "computor.openApiDataInEditor",
          "when": "view == computor.apiTreeView && viewItem =~ /apiTreeItem/",
          "group": "1_copy@2"
        },
        {
          "command": "computor.copyJsonValue",
          "when": "view == computor.jsonTreeView && viewItem =~ /jsonTreeItem.*\\.copyable/",
          "group": "1_copy@1"
        },
        {
          "command": "computor.copyJsonPath",
          "when": "view == computor.jsonTreeView && viewItem =~ /jsonTreeItem/",
          "group": "1_copy@2"
        },
        {
          "command": "computor.openJsonInEditor",
          "when": "view == computor.jsonTreeView && viewItem =~ /jsonTreeItem/",
          "group": "2_open@1"
        },
        {
          "command": "computor.goToTest",
          "when": "view == computor.testResultsView && viewItem =~ /testResult/",
          "group": "1_test@1"
        },
        {
          "command": "computor.runSingleTest",
          "when": "view == computor.testResultsView && viewItem =~ /testResult/",
          "group": "1_test@2"
        },
        {
          "command": "computor.createCourseContent",
          "when": "view == computor.lecturerView && viewItem =~ /course\\.contents/",
          "group": "1_content@1"
        },
        {
          "command": "computor.createCourseContent",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent/",
          "group": "1_content@1"
        },
        {
          "command": "computor.createCourseContentType",
          "when": "view == computor.lecturerView && viewItem == course.contentTypes",
          "group": "1_content@1"
        },
        {
          "command": "computor.createCourseGroup",
          "when": "view == computor.lecturerView && viewItem == course.groups",
          "group": "1_content@1"
        },
        {
          "command": "computor.renameCourseContent",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent/",
          "group": "2_edit@1"
        },
        {
          "command": "computor.deleteCourseContent",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent/",
          "group": "3_delete@1"
        },
        {
          "command": "computor.assignExample",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent.*assignment.*noExample/",
          "group": "4_example@1"
        },
        {
          "command": "computor.unassignExample",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent.*assignment.*hasExample/",
          "group": "4_example@1"
        },
        {
          "command": "computor.showCourseDetails",
          "when": "view == computor.lecturerView && viewItem == course",
          "group": "5_details@1"
        },
        {
          "command": "computor.showCourseContentDetails",
          "when": "view == computor.lecturerView && viewItem =~ /courseContent/",
          "group": "5_details@1"
        },
        {
          "command": "computor.showOrganizationDetails",
          "when": "view == computor.lecturerView && viewItem == organization",
          "group": "5_details@1"
        },
        {
          "command": "computor.showCourseFamilyDetails",
          "when": "view == computor.lecturerView && viewItem == courseFamily",
          "group": "5_details@1"
        },
        {
          "command": "computor.showCourseContentTypeDetails",
          "when": "view == computor.lecturerView && viewItem == courseContentType",
          "group": "5_details@1"
        },
        {
          "command": "computor.openGitLabRepo",
          "when": "view == computor.lecturerView && viewItem =~ /course/",
          "group": "5_gitlab@1"
        },
        {
          "command": "computor.releaseCourseContent",
          "when": "view == computor.lecturerView && viewItem == course",
          "group": "5_gitlab@2"
        },
        {
          "command": "computor.checkoutExample",
          "when": "view == computor.examplesView && viewItem == example",
          "group": "1_actions@1"
        },
        {
          "command": "computor.uploadExample",
          "when": "view == computor.examplesView && viewItem == example",
          "group": "1_actions@2"
        },
        {
          "command": "computor.scanWorkspace",
          "when": "view == computor.examplesView",
          "group": "2_workspace@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha",
    "test:unit": "mocha --config .mocharc.unit.json",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "test:git-basic": "ts-node test/integration/manual/test-git-basic.ts",
    "test:gitlab": "ts-node test/integration/manual/test-gitlab-integration.ts",
    "test:gitlab-auto": "ts-node test/integration/manual/test-gitlab-auto.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.126",
    "@types/node-fetch": "^2.6.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.0",
    "simple-git": "^3.28.0",
    "uuid": "^11.1.0"
  }
}
